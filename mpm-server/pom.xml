<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://maven.apache.org/POM/4.0.0"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <artifactId>mpm-server</artifactId>
    <build>
        <plugins>
            <plugin>
                <artifactId>isc-maven-plugin</artifactId>
                <configuration>
                    <dataSourcesDir>WEB-INF/ds/classic-models</dataSourcesDir>
                    <smartclientRuntimeDir>
                        ${project.parent.build.directory}/gwt/launcherDir/app/sc
                    </smartclientRuntimeDir>
                </configuration>
                <groupId>com.isomorphic</groupId>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <artifactId>gwt-servlet</artifactId>
            <groupId>com.google.gwt</groupId>
            <version>${gwt.version}</version>
        </dependency>
        <dependency>
            <artifactId>javax.servlet-api</artifactId>
            <groupId>javax.servlet</groupId>
            <scope>provided</scope>
            <version>${servlets.version}</version>
        </dependency>
        <dependency>
            <artifactId>lombok</artifactId>
            <groupId>org.projectlombok</groupId>
            <scope>provided</scope>
            <version>1.18.12</version>
        </dependency>
        <dependency>
            <artifactId>cos_api</artifactId>
            <groupId>com.qcloud</groupId>
            <version>5.6.28</version>
        </dependency>

        <!-- https://mvnrepository.com/artifact/org.nutz/nutzboot-servlet3 -->
        <dependency>
            <artifactId>nutzboot-servlet3</artifactId>
            <groupId>org.nutz</groupId>
            <version>2.4.1.v20201014</version>
        </dependency>
        <dependency>
            <artifactId>slf4j-log4j12</artifactId>
            <groupId>org.slf4j</groupId>
        </dependency>
        <dependency>
            <artifactId>nutzboot-starter-nutz-mvc</artifactId>
            <groupId>org.nutz</groupId>
        </dependency>
        <dependency>
            <artifactId>mysql-connector-java</artifactId>
            <groupId>mysql</groupId>
            <version>8.0.20</version>
        </dependency>
        <dependency>
            <artifactId>nutzboot-starter-jdbc</artifactId>
            <groupId>org.nutz</groupId>
        </dependency>
        <dependency>
            <artifactId>nutzboot-starter-nutz-dao</artifactId>
            <groupId>org.nutz</groupId>
        </dependency>

        <!-- https://mvnrepository.com/artifact/com.drewnoakes/metadata-extractor -->
        <dependency>
            <artifactId>metadata-extractor</artifactId>
            <groupId>com.drewnoakes</groupId>
            <version>2.14.0</version>
        </dependency>

        <dependency>
            <artifactId>junit-jupiter-api</artifactId>
            <groupId>org.junit.jupiter</groupId>
            <scope>test</scope>
            <version>5.7.0</version>
        </dependency>
        <dependency>
            <artifactId>junit-jupiter-engine</artifactId>
            <groupId>org.junit.jupiter</groupId>
            <scope>test</scope>
            <version>5.7.0</version>
        </dependency>
        <dependency>
            <artifactId>junit-jupiter-params</artifactId>
            <groupId>org.junit.jupiter</groupId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <artifactId>junit-jupiter-migrationsupport</artifactId>
            <groupId>org.junit.jupiter</groupId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <artifactId>nutzboot-starter-test</artifactId>
            <groupId>org.nutz</groupId>
            <scope>test</scope>
            <version>${nutzboot.version}</version>
        </dependency>

    </dependencies>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <artifactId>nutzboot-parent</artifactId>
                <groupId>org.nutz</groupId>
                <scope>import</scope>
                <type>pom</type>
                <version>${nutzboot.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <modelVersion>4.0.0</modelVersion>

    <packaging>war</packaging>

    <parent>
        <artifactId>mpm</artifactId>
        <groupId>org.mpm</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <profiles>
        <profile>
            <!-- XXX: We want to exclude foo-client from 'env-dev' profile, Maven forces us to make a 'env-prod' profile -->
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <dependencies>
                <dependency>
                    <artifactId>mpm-client</artifactId>
                    <groupId>${project.groupId}</groupId>
                    <scope>runtime</scope>
                    <type>war</type>
                    <version>${project.version}</version>
                </dependency>
            </dependencies>
            <id>prod</id>
        </profile>
        <profile>
            <activation>
                <property>
                    <name>env</name>
                    <value>dev</value>
                </property>
            </activation>
            <build>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <artifactId>jetty-maven-plugin</artifactId>
                            <configuration>
                                <webApp>
                                    <baseResource
                                        implementation="org.eclipse.jetty.util.resource.ResourceCollection">
                                        <resourcesAsCSV>
                                            ${project.basedir}/src/main/webapp,${project.parent.build.directory}/gwt/launcherDir/
                                        </resourcesAsCSV>
                                    </baseResource>
                                    <jettyEnvXml>${project.basedir}/src/etc/jetty/jetty-env.xml
                                    </jettyEnvXml>
                                </webApp>
                            </configuration>
                            <groupId>org.eclipse.jetty</groupId>
                            <version>9.4.31.v20200723</version>
                        </plugin>
                    </plugins>

                </pluginManagement>
            </build>
            <id>dev</id>
        </profile>
    </profiles>

    <properties>
        <nutzboot.version>2.4.1.v20201014</nutzboot.version>
    </properties>

</project>
