<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://maven.apache.org/POM/4.0.0"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <artifactId>mpm-server</artifactId>
    <build>
        <plugins>
            <plugin>
                <artifactId>isc-maven-plugin</artifactId>
                <configuration>
                    <dataSourcesDir>WEB-INF/ds/classic-models</dataSourcesDir>
                    <smartclientRuntimeDir>
                        ${project.parent.build.directory}/gwt/launcherDir/app/sc
                    </smartclientRuntimeDir>
                </configuration>
                <groupId>com.isomorphic</groupId>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <artifactId>gwt-servlet</artifactId>
            <groupId>com.google.gwt</groupId>
            <version>${gwt.version}</version>
        </dependency>
        <dependency>
            <artifactId>javax.servlet-api</artifactId>
            <groupId>javax.servlet</groupId>
            <scope>provided</scope>
            <version>${servlets.version}</version>
        </dependency>
        <dependency>
            <artifactId>jsp-api</artifactId>
            <groupId>javax.servlet.jsp</groupId>
            <scope>provided</scope>
            <version>2.2</version>
        </dependency>
        <dependency>
            <artifactId>lombok</artifactId>
            <groupId>org.projectlombok</groupId>
            <scope>provided</scope>
            <version>1.18.12</version>
        </dependency>
        <dependency>
            <groupId>com.qcloud</groupId>
            <artifactId>cos_api</artifactId>
            <version>5.6.34</version>
        </dependency>
        <dependency>
            <groupId>com.tencent.cloud</groupId>
            <artifactId>cos-sts-java</artifactId>
            <version>3.0.8</version>
        </dependency>

        <dependency>
            <artifactId>mysql-connector-java</artifactId>
            <groupId>mysql</groupId>
            <version>8.0.20</version>
        </dependency>
        <dependency>
            <artifactId>isomorphic-core-rpc</artifactId>
            <groupId>com.isomorphic.smartgwt.eval</groupId>
            <version>${smartgwt.version}</version>
        </dependency>
        <dependency>
            <artifactId>isomorphic-tools</artifactId>
            <groupId>com.isomorphic.smartgwt.eval</groupId>
            <version>${smartgwt.version}</version>
        </dependency>
        <dependency>
            <artifactId>isomorphic-sql</artifactId>
            <groupId>com.isomorphic.smartgwt.eval</groupId>
            <version>${smartgwt.version}</version>
        </dependency>

        <!-- https://mvnrepository.com/artifact/com.drewnoakes/metadata-extractor -->
        <dependency>
            <artifactId>metadata-extractor</artifactId>
            <groupId>com.drewnoakes</groupId>
            <version>2.14.0</version>
        </dependency>

        <dependency>
            <groupId>org.nutz</groupId>
            <artifactId>nutz</artifactId>
            <version>1.r.68.v20191031</version>
        </dependency>
        <dependency>
            <artifactId>spring-boot-starter-web</artifactId>
            <groupId>org.springframework.boot</groupId>
            <version>2.3.1.RELEASE</version>
            <exclusions>
                <!-- Exclude the Tomcat dependency -->
                <exclusion>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-starter-tomcat</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <artifactId>spring-web</artifactId>
            <groupId>org.springframework</groupId>
            <version>5.2.7.RELEASE</version>
        </dependency>
        <dependency>
            <artifactId>spring-webmvc</artifactId>
            <groupId>org.springframework</groupId>
            <version>5.2.7.RELEASE</version>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-jetty</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.isomorphic.smartgwt.eval</groupId>
            <artifactId>isomorphic-spring</artifactId>
            <version>${smartgwt.version}</version>
        </dependency>
        <dependency>
            <artifactId>druid</artifactId>
            <groupId>com.alibaba</groupId>
            <version>1.1.22</version>
        </dependency>


        <!-- to delete -->
        <dependency>
            <artifactId>spring-boot-starter-test</artifactId>
            <groupId>org.springframework.boot</groupId>
            <exclusions>
                <exclusion>
                    <groupId>com.vaadin.external.google</groupId>
                    <artifactId>android-json</artifactId>
                </exclusion>
                <exclusion>
                    <artifactId>junit-vintage-engine</artifactId>
                    <groupId>org.junit.vintage</groupId>
                </exclusion>
            </exclusions>
            <scope>test</scope>
        </dependency>

    </dependencies>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <artifactId>spring-boot-starter-parent</artifactId>
                <groupId>org.springframework.boot</groupId>
                <version>2.3.1.RELEASE</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <modelVersion>4.0.0</modelVersion>

    <packaging>war</packaging>

    <parent>
        <artifactId>mpm</artifactId>
        <groupId>org.mpm</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <profiles>
        <profile>
            <!-- XXX: We want to exclude foo-client from 'env-dev' profile, Maven forces us to make a 'env-prod' profile -->
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <dependencies>
                <dependency>
                    <artifactId>mpm-client</artifactId>
                    <groupId>${project.groupId}</groupId>
                    <scope>runtime</scope>
                    <type>war</type>
                    <version>${project.version}</version>
                </dependency>
            </dependencies>
            <id>prod</id>
        </profile>
        <profile>
            <activation>
                <property>
                    <name>env</name>
                    <value>dev</value>
                </property>
            </activation>
            <build>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <artifactId>jetty-maven-plugin</artifactId>
                            <configuration>
                                <webApp>
                                    <baseResource
                                        implementation="org.eclipse.jetty.util.resource.ResourceCollection">
                                        <resourcesAsCSV>
                                            ${project.basedir}/src/main/webapp,${project.parent.build.directory}/gwt/launcherDir/
                                        </resourcesAsCSV>
                                    </baseResource>
                                    <jettyEnvXml>${project.basedir}/src/etc/jetty/jetty-env.xml
                                    </jettyEnvXml>
                                </webApp>
                            </configuration>
                            <groupId>org.eclipse.jetty</groupId>
                            <version>9.4.31.v20200723</version>
                        </plugin>
                    </plugins>

                </pluginManagement>
            </build>
            <id>dev</id>
        </profile>
    </profiles>
</project>
