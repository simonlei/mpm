<Application>
    <rpcBindings>
        <ServerObject ID="meta" lookupStyle="spring" className="org.mpm.server.metas.ConfigDataSource" bean="configDataSource">
            <visibleMethods>
                <method name="fetchConfig"/>
                <method name="authPassword"/>
            </visibleMethods>
        </ServerObject>
        <ServerObject ID="pics" lookupStyle="spring" className="org.mpm.server.pics.PicsController" bean="picsDataSource">
            <visibleMethods>
                <method name="count"/>
                <method name="emptyTrash"/>
                <method name="batchUpdatePics"/>
            </visibleMethods>
        </ServerObject>
        <ServerObject ID="pics" lookupStyle="spring" className="org.mpm.server.progress.ProgressController" bean="progressDataSource">
            <visibleMethods>
                <method name="getProgress"/>
            </visibleMethods>
        </ServerObject>
    </rpcBindings>
</Application>