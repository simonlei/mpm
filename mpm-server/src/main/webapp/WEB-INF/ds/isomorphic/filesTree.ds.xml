<DataSource
    ID="filesTree"
    schemaBean="org.mpm.server.entity.EntityFile"
    tableName="t_files"
    autoDeriveSchema="true"
    serverType="generic">
    <fields>
        <field name="id" primaryKey="true"/>
        <field name="parentId" type="integer" foreignKey="filesTree.id"/>
        <field name="title"/>
    </fields>
    <operationBindings>
        <operationBinding operationType="fetch">
            <criteria fieldName="isFolder" value="1"/>
        </operationBinding>
    </operationBindings>
    <serverObject lookStyle="new" className="org.mpm.server.pics.FilesDataSource"/>
</DataSource>
